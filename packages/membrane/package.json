{
  "name": "@tsyche/membrane",
  "version": "0.6.0",
  "description": "Composable operation pipelines for managing data at operation boundaries",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "pnpm clean",
    "build": "tsc -p tsconfig.build.json",
    "test": "jest",
    "test:cov": "jest --coverage",
    "lint": "eslint src/ && tsc --noEmit",
    "lint:fix": "eslint --fix src/",
    "format": "prettier --check src/",
    "format:fix": "prettier --write src/",
    "clean": "rm -rf dist coverage"
  },
  "keywords": [
    "enhancer",
    "pipeline",
    "composition",
    "middleware",
    "hooks",
    "ddd",
    "boundary"
  ],
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">=20"
  },
  "publishConfig": {
    "access": "public"
  }
}
